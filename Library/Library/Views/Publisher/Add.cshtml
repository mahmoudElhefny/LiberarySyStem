@using Library.ViewModel
@model PublisherVM
@{
    Layout = "_AdminLayout";
}

<div class="row">
     <div class="col-md-2"></div>
    <div class="col-md-8">
        <h2 class="text-center shadow  mb-3 p-3">Add New Publisher</h2>
<hr />
         <form asp-action="Add">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StablishedAt" class="control-label"></label>
                <input asp-for="StablishedAt" class="form-control" />
                <span asp-validation-for="StablishedAt" class="text-danger"></span>
            </div>

            <div class="row mt-5 mb-5">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn form-control btn btn-outline-success" />
                    </div>
                </div>
                <div class="col-12 col-md-6">
                     <a asp-action="Index" class="form-control btn btn-outline-dark ">Back To Publishers</a>
                </div>
            </div>
            
        </form>
    </div>
    <div class="col-md-2"></div>
</div>









@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
