<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" asp-append-version="true" />
</head>
<body>
    <div>
        @Html.Partial("_AppNavBar")
    </div>
  
        <main role="main" class="pb-3" style="min-height:410px">
            @RenderBody()
        </main>

     <div>
         @Html.Partial("_Footer")
     </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
